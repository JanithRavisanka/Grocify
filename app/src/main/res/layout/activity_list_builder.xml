<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar_height"
        android:background="@color/primary"
        android:elevation="@dimen/elevation_app_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageView
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/cd_back"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_back"
            app:tint="@color/text_on_primary" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/spacing_md"
            android:text="@string/build_list"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_h4"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/action_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_screen">

            <!-- List Name Input Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/list_name"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body1"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_search"
                        android:fontFamily="sans-serif"
                        android:hint="@string/list_name_hint"
                        android:inputType="text"
                        android:padding="@dimen/padding_button"
                        android:text="@string/sample_list_name"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_size_body1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Selected Items Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/selected_items"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body1"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip"
                            android:paddingHorizontal="@dimen/spacing_md"
                            android:paddingVertical="@dimen/spacing_xs"
                            android:text="3 items"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_caption" />

                    </LinearLayout>

                    <!-- Selected Items List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_md"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="@dimen/spacing_md"
                                android:background="@drawable/placeholder_item"
                                android:contentDescription="@string/cd_item_image" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="@string/sample_item_apple"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_body2"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qty: 2"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_caption" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/touch_target_button"
                                android:layout_height="@dimen/touch_target_button"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="@string/cd_remove_item"
                                android:focusable="true"
                                android:padding="@dimen/spacing_sm"
                                android:src="@drawable/ic_delete" />

                        </LinearLayout>

                        <!-- Item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_md"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="@dimen/spacing_md"
                                android:background="@drawable/placeholder_item"
                                android:contentDescription="@string/cd_item_image" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="@string/sample_item_milk"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_body2"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qty: 1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_caption" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/touch_target_button"
                                android:layout_height="@dimen/touch_target_button"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="@string/cd_remove_item"
                                android:focusable="true"
                                android:padding="@dimen/spacing_sm"
                                android:src="@drawable/ic_delete" />

                        </LinearLayout>

                        <!-- Item 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="@dimen/spacing_md"
                                android:background="@drawable/placeholder_item"
                                android:contentDescription="@string/cd_item_image" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="@string/sample_item_bread"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_body2"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qty: 1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_caption" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/touch_target_button"
                                android:layout_height="@dimen/touch_target_button"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="@string/cd_remove_item"
                                android:focusable="true"
                                android:padding="@dimen/spacing_sm"
                                android:src="@drawable/ic_delete" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_card"
        android:orientation="horizontal"
        android:padding="@dimen/padding_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Clear Button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/size_button_height"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:layout_weight="1"
            android:background="@drawable/bg_chip"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/clear"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body1" />

        <!-- Save List Button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/size_button_height"
            android:layout_marginStart="@dimen/spacing_sm"
            android:layout_weight="2"
            android:background="@drawable/ripple_accent"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/save_list"
            android:textColor="@color/text_on_accent"
            android:textSize="@dimen/text_size_body1"
            android:textStyle="bold" />
        <!-- NAV: to ListsActivity (and visually show the new list) -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
