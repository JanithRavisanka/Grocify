<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="@dimen/elevation_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_card">

        <!-- List Icon -->
        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="@dimen/size_icon_xl"
            android:layout_height="@dimen/size_icon_xl"
            android:background="@drawable/bg_icon_circle"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_checklist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary"
            tools:ignore="ContentDescription" />

        <!-- List Name -->
        <TextView
            android:id="@+id/list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_body1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_icon"
            app:layout_constraintTop_toTopOf="@id/list_icon"
            tools:text="Weekly Groceries" />

        <!-- Item Count Chip -->
        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:background="@drawable/bg_chip_modern"
            android:paddingHorizontal="@dimen/chip_padding_horizontal"
            android:paddingVertical="@dimen/chip_padding_vertical"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintStart_toStartOf="@id/list_name"
            app:layout_constraintTop_toBottomOf="@id/list_name"
            tools:text="15 items" />

        <!-- Date -->
        <TextView
            android:id="@+id/list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintBottom_toBottomOf="@id/item_count"
            app:layout_constraintStart_toEndOf="@id/item_count"
            app:layout_constraintTop_toTopOf="@id/item_count"
            tools:text="Saved on Oct 26" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/spacing_lg"
            android:progressDrawable="@drawable/bg_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_icon"
            tools:progress="60" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:textColor="@color/success"
            android:textSize="@dimen/text_size_caption"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            tools:text="60% complete" />

        <!-- Share Icon -->
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toStartOf="@id/delete_icon"
            app:layout_constraintTop_toTopOf="@id/progress_text"
            app:tint="@color/text_secondary"
            tools:ignore="ContentDescription" />

        <!-- Delete Icon -->
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/progress_text"
            app:tint="@color/error"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
