<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_surface">

    <!-- Background gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary" />

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_screen">

        <!-- App logo placeholder -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/spacing_xxl"
            android:background="@drawable/placeholder_category"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/spacing_lg"
            android:src="@drawable/ic_list" />

        <!-- App name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:fontFamily="sans-serif-medium"
            android:text="@string/app_name"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_h1"
            android:textStyle="bold" />

        <!-- App tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:alpha="0.9"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/app_tagline"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_body1" />

        <!-- Loading indicator -->
        <ProgressBar
            android:layout_width="@dimen/progress_size_md"
            android:layout_height="@dimen/progress_size_md"
            android:layout_marginTop="@dimen/spacing_xl"
            android:indeterminateTint="@color/accent" />

    </LinearLayout>

    <!-- Version info at bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:alpha="0.7"
        android:text="@string/version"
        android:textColor="@color/text_on_primary"
        android:textSize="@dimen/text_size_caption" />

    <!-- Navigation comment -->
    <!-- NAV: to HomeActivity after delay -->

</FrameLayout>
