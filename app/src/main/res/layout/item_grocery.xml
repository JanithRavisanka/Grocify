<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_md"
    app:cardElevation="@dimen/elevation_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_card">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/size_item_image"
            android:layout_height="@dimen/size_item_image"
            android:background="@drawable/placeholder_item"
            android:contentDescription="@string/cd_item_image"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Item Name -->
        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="@string/sample_item_apple"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_body1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/quantity_container"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintTop_toTopOf="@id/item_image" />

        <!-- Unit and Price Row -->
        <LinearLayout
            android:id="@+id/details_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginEnd="@dimen/spacing_md"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/quantity_container"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintTop_toBottomOf="@id/item_name">

            <!-- Unit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:text="@string/sample_unit_kg"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_caption" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:fontFamily="sans-serif-medium"
                android:text="@string/sample_price"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_body2"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Quantity Container -->
        <LinearLayout
            android:id="@+id/quantity_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Decrease Button -->
            <ImageView
                android:layout_width="@dimen/touch_target_button"
                android:layout_height="@dimen/touch_target_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_decrease_quantity"
                android:focusable="true"
                android:padding="@dimen/spacing_sm"
                android:src="@drawable/ic_remove" />

            <!-- Quantity Display -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:minWidth="32dp"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body1"
                android:textStyle="bold" />

            <!-- Increase Button -->
            <ImageView
                android:layout_width="@dimen/touch_target_button"
                android:layout_height="@dimen/touch_target_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_increase_quantity"
                android:focusable="true"
                android:padding="@dimen/spacing_sm"
                android:src="@drawable/ic_add"
                app:tint="@color/primary" />

        </LinearLayout>

        <!-- Add Button -->
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:background="@drawable/ripple_accent"
            android:clickable="true"
            android:contentDescription="@string/cd_add_item"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="@dimen/spacing_xxl"
            android:paddingVertical="@dimen/spacing_md"
            android:text="@string/add"
            android:textColor="@color/text_on_accent"
            android:textSize="@dimen/text_size_body2"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantity_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
