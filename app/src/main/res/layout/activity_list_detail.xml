<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar_height"
        android:background="@color/primary"
        android:elevation="@dimen/elevation_app_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageView
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/cd_back"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_back"
            app:tint="@color/text_on_primary" />

        <!-- List title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/spacing_md"
            android:text="@string/sample_list_name"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_h4"
            android:textStyle="bold" />

        <!-- More options -->
        <ImageView
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/cd_menu"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_search"
            app:tint="@color/text_on_primary" />

    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_screen"
        android:layout_marginTop="@dimen/spacing_lg"
        android:background="@drawable/bg_search"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_card"
        android:paddingVertical="@dimen/spacing_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <ImageView
            android:layout_width="@dimen/size_icon_md"
            android:layout_height="@dimen/size_icon_md"
            android:layout_marginEnd="@dimen/spacing_md"
            android:contentDescription="@string/cd_search"
            android:src="@drawable/ic_search" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:hint="Search within list"
            android:inputType="text"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_size_body1" />

    </LinearLayout>

    <!-- Progress Summary -->
    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_screen"
        android:layout_marginTop="@dimen/spacing_lg"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/radius_md"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_card">

            <!-- Progress header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Shopping Progress"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60% complete"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_body2"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Progress stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="3"
                        android:textColor="@color/success"
                        android:textSize="@dimen/text_size_h4"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/completed_items"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="2"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_h4"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remaining_items"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Items List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_lg"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_screen"
            android:paddingBottom="@dimen/spacing_lg">

            <!-- Remaining Items Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:fontFamily="sans-serif-medium"
                android:text="@string/remaining_items"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body1"
                android:textStyle="bold" />

            <!-- Remaining Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:background="@drawable/bg_card"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_card">

                <!-- Checkbox -->
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:checked="false"
                    android:contentDescription="@string/mark_purchased" />

                <!-- Item details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/sample_item_apple"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body1"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty: 2"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </LinearLayout>

            <!-- Remaining Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:background="@drawable/bg_card"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_card">

                <!-- Checkbox -->
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:checked="false"
                    android:contentDescription="@string/mark_purchased" />

                <!-- Item details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/sample_item_milk"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body1"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty: 1"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </LinearLayout>

            <!-- Completed Items Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:fontFamily="sans-serif-medium"
                android:text="@string/completed_items"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body1"
                android:textStyle="bold" />

            <!-- Completed Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:background="@drawable/bg_card"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_card">

                <!-- Checkbox -->
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:checked="true"
                    android:contentDescription="@string/unmark_purchased" />

                <!-- Item details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/sample_item_bread"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_body1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:text="Qty: 1"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_card"
        android:orientation="horizontal"
        android:padding="@dimen/padding_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Edit Name Button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/size_button_height"
            android:layout_marginEnd="@dimen/spacing_xs"
            android:layout_weight="1"
            android:background="@drawable/bg_chip"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/edit_name"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body2" />

        <!-- Share Button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/size_button_height"
            android:layout_marginHorizontal="@dimen/spacing_xs"
            android:layout_weight="1"
            android:background="@drawable/bg_button_primary"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/share"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_body2" />

        <!-- Delete Button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/size_button_height"
            android:layout_marginStart="@dimen/spacing_xs"
            android:layout_weight="1"
            android:background="@drawable/bg_chip"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/delete"
            android:textColor="@color/error"
            android:textSize="@dimen/text_size_body2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
