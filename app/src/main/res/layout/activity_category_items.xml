<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- App Bar with back button -->
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar_height"
        android:background="@color/primary"
        android:elevation="@dimen/elevation_app_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageView
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/cd_back"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_back"
            app:tint="@color/text_on_primary" />
        <!-- NAV: back to HomeActivity -->

        <!-- Category title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/spacing_md"
            android:text="@string/category_fruits"
            android:textColor="@color/text_on_primary"
            android:textSize="@dimen/text_size_h4"
            android:textStyle="bold" />

        <!-- Search icon -->
        <ImageView
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/cd_search"
            android:focusable="true"
            android:padding="@dimen/spacing_md"
            android:src="@drawable/ic_search"
            app:tint="@color/text_on_primary" />

    </LinearLayout>

    <!-- Filter and Sort Row -->
    <LinearLayout
        android:id="@+id/filter_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:orientation="horizontal"
        android:padding="@dimen/padding_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <!-- Filter chips container -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- All filter chip -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:background="@drawable/bg_chip_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="@dimen/padding_button"
                    android:paddingVertical="@dimen/padding_chip"
                    android:text="@string/filter_all"
                    android:textColor="@color/text_on_primary"
                    android:textSize="@dimen/text_size_body2" />

                <!-- Popular filter chip -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:background="@drawable/bg_chip_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="@dimen/padding_button"
                    android:paddingVertical="@dimen/padding_chip"
                    android:text="@string/filter_popular"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body2" />

                <!-- New filter chip -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:background="@drawable/bg_chip_unselected"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="@dimen/padding_button"
                    android:paddingVertical="@dimen/padding_chip"
                    android:text="@string/filter_new"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body2" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Sort dropdown -->
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:background="@drawable/bg_chip_unselected"
            android:contentDescription="@string/cd_sort"
            android:entries="@array/sort_options"
            android:minWidth="80dp"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_sm" />

    </LinearLayout>

    <!-- Items List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        android:paddingHorizontal="@dimen/padding_screen"
        android:paddingTop="@dimen/spacing_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_row" />

    <!-- Bottom Selected Items Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/selected_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_screen"
        android:visibility="visible"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="@dimen/radius_lg"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_card">

            <!-- Selected count -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/selected_count"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_body1" />

            <!-- Build List Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_button_height"
                android:background="@drawable/bg_button_accent"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="@dimen/spacing_xxl"
                android:text="@string/build_list"
                android:textColor="@color/text_on_accent"
                android:textSize="@dimen/text_size_body1"
                android:textStyle="bold" />
            <!-- NAV: to ListBuilderActivity -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
